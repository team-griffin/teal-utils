{
  "env": {
    "development": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "browsers": [
                "last 2 versions",
                "safari >= 7"
              ],
            },
            "modules": false,
            "useBuiltIns": false,
          }
        ],
        "flow"
      ],
      "plugins": [ "ramda" ]
    },

    "production": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "browsers": [
                "last 2 versions",
                "safari >= 7"
              ],
            },
            "modules": false,
            "useBuiltIns": false,
          }
        ],
        "flow"
      ],
      "plugins": [ "ramda" ]
    },

    "test": {
      "presets": [
        [
          "env",
          {
            "targets": {
              "node": "current"
            },
            "modules": "commonjs",
            "useBuiltIns": false,
          }
        ],
        "flow"
      ],
      "plugins": [ "ramda" ]
    }
  }
}
